<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <RootNamespace>ECMA2Yaml</RootNamespace>
    <AssemblyName>ECMAHelper</AssemblyName>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Logging\LogCode.tt" />
    <None Remove="Transform\ECMADocsTransform.xsl" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Logging\LogCode.tt">
      <LastGenOutput>LogCode.cs</LastGenOutput>
      <Generator>TextTemplatingFileGenerator</Generator>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Transform\ECMADocsTransform.xsl" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.DocAsCode.DataContracts.Common" Version="2.43.2" />
    <PackageReference Include="Microsoft.DocAsCode.YamlSerialization" Version="2.43.2" />
    <PackageReference Include="Microsoft.OpenPublishing.FileAbstractLayer" Version="1.83.0" />
    <PackageReference Include="Microsoft.OpenPublishing.LogCodeService.Manager" Version="1.0.3" />
    <PackageReference Include="Newtonsoft.Json" Version="9.0.1" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="monodoc">
      <HintPath>..\dependencies\monodoc.dll</HintPath>
    </Reference>
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Logging\LogCode.cs">
      <DependentUpon>LogCode.tt</DependentUpon>
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <None Update="Logging\CommonLogMessages.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <Service Include="{508349b6-6b84-4df5-91f0-309beebad82d}" />
  </ItemGroup>

</Project>
